<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WPF.Example">

    <Style TargetType="TextBox" x:Key="TextBoxStyleBase">
        <Setter Property="Margin" Value="3"/>
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyleBase}" x:Key="TextBoxWithCustomRoregroundStyle">
        <Setter Property="Foreground" Value="Navy"/>
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyleBase}"/>
</ResourceDictionary>